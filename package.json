{
  "name": "@nulogy/nds",
  "version": "1.0.0",
  "description": "Modern Enterprise Design for the Industrial Environment - http://nulogy.design",
  "private": true,
  "workspaces": [
    "packages/components",
    "packages/css",
    "packages/icons",
    "packages/tokens"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "yarn workspace @nulogy/components test && yarn workspace @nulogy/components e2e:test",
    "publish-packages": "yarn install && yarn build && yarn lerna publish",
    "precommit": "pretty-quick --staged",
    "lint": "yarn run eslint",
    "eslint": "eslint --config ./.eslintrc './**/*.js'",
    "eslint:fix": "yarn run eslint --fix",
    "build-storybook": "yarn workspace @nulogy/components build-storybook"
  },
  "main": "index.js",
  "license": "MIT",
  "author": "Nulogy <info@nulogy.com> (https://github.com/nulogy)",
  "homepage": "http://nulogy.design",
  "repository": "https://github.com/nulogy/design-system",
  "keywords": [
    "nulogy",
    "NDS",
    "design system"
  ],
  "engines": {
    "node": "^12.16.3",
    "yarn": "^1.17.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.0.0",
    "husky": "2.2.0",
    "lerna": "^3.16.4",
    "prettier": "1.17.0",
    "pretty-quick": "2.0.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "wait-for-expect": "^3.0.2"
  },
  "resolutions": {
    "**/svgi/js-yaml": "^3.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run precommit"
    }
  }
}
