{
  "compilerOptions": {
    "target": "ES2015",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.story.js", "**/*.spec.js", "**/*.story.ts", "**/*.spec.ts"]
}
