{
  "version": "2.8.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "createRelease": "github",
      "ignoreChanges": [
        "**/__snapshots__/**",
        "**/**.spec.js",
        "**/**.story.js",
        "*.md",
        "./docs/*",
        "./components-e2e/*"
      ]
    },
    "publish": {
      "conventionalCommits": true,
      "allowBranch": [
        "master"
      ]
    }
  }
}
