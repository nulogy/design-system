{
  "version": "0.24.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "createRelease": "github"
    },
    "publish": {
      "ignoreChanges": [
        "**/__snapshots__/**",
        "**/**.spec.js",
        "**/**.story.js",
        "*.md"
      ],
      "conventionalCommits": true,
      "allowBranch": ["master"]
    }
  }
}
