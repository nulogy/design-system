{
  "version": "4.1.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "createRelease": "github",
      "ignoreChanges": [
        "**/__snapshots__/**",
        "**/**.spec.js",
        "**/**.story.js",
        "*.md",
        "**/**.md",
        "./components/.storybook/*"
      ]
    },
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master"]
    }
  }
}
